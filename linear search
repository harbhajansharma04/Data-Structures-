#include <bits/stdc++.h>
using namespace std;
int main()
{
    int a[10]={10,23,40,1,20,4,14,13,50,9};
    int item, flag=0, i;
    cout<<("\nEnter value = ");
    cin>>item;
    for(int i=0;i<10;i++)
    {
        if(a[i]==item)
        {
            flag=i+1;
        }
        
    }
    if(flag!=0)
    {
        cout<<item<<" is present at index "<<flag<<endl;
    }
    else{
        cout<<"\nItem not found";
    }
    
}
